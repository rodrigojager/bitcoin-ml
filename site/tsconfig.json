{
  "compilerOptions": {
    /* JSX -------------------------------------------------- */
    "jsx": "react-jsx",

    /* MÓDULOS --------------------------------------------- */
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* TIPOS ------------------------------------------------ */
    "types": [ "react", "react-dom" ],
    "skipLibCheck": true,

    /* OUTRAS REGRAS --------------------------------------- */
    "target": "ES2020",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "wwwroot/react/**/*"
  ]
}
